exec = echo " "
format-foreground = ${colors.red}
;format-foreground = ${colors.foreground}
format = <label>
click-left = playerctl previous spotify

[module/spotify-play-pause]
type = custom/ipc
format-foreground = ${colors.teal}
;format-foreground = ${colors.foreground}
hook-0 = echo " "
hook-1 = echo " "
initial = 1
click-left = playerctl play-pause spotify

