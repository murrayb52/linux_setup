[module/mem]
type = internal/memory
interval = 1
label =  %gb_free%
format = <label>
label-padding = ${vars.spacing}


[module/cpu]
type = internal/cpu
interval = 1
format = <label>
label =   %percentage%%
label-padding${vars.spacing}


[module/temp]
type = internal/temperature
hwmon-path = /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp1_input
interval = 1
thermal-zone = 0
units = true
label =  %temperature-c%
warn-temperature = 60
label-warn =  %temperature-c%
label-padding = ${vars.spacing}
label-warn-padding = ${vars.spacing}


[module/disk]
type = internal/fs
mount-0 = /
interval = 10
label-mounted =  %free%
label-mounted-padding = ${vars.spacing}


[module/updates]
type = custom/script
exec = expr $(apt list --upgradable 2>/dev/null | wc -l) - 1
format = <label>
interval = 300
label =  %output% updates
label-padding = ${vars.spacing}


[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3
format-connected = <label-connected>
label-connected =  %essid%
label-connected-padding = ${vars.spacing}
format-disconnected = <label-disconnected>
label-disconnected =  disconnected
label-disconnected-padding = ${vars.spacing}

[module/local-ip]
type = internal/network
interface = wlp2s0
interval = 3
format-connected = <label-connected>
label-connected =   %local_ip%
label-connected-padding = ${vars.spacing}
format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-padding = ${vars.spacing}

[module/ipv4]
type = custom/script
exec = ~/.config/polybar/pub-ipv4.sh
interval = 10
label =   %output%
tail = true
label-padding = ${vars.spacing}


[module/notification]
type = custom/text
click-left = kill -s USR1 $(pidof deadd-notification-center) &
content =  
content-padding = ${vars.spacing}
content-overline = ${color.c7}

[module/redshift]
type = custom/text
click-left = redshift -O 4500K &
click-right = redshift -x &
content = 
content-padding = 4

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC
poll-interval = 5

format-charging = <label-charging>
format-charging-padding = ${vars.spacing}
label-charging =   %percentage%%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
format-discharging-padding = ${vars.spacing}

label-full =   %percentage%%
label-full-padding = ${vars.spacing}

ramp-capacity-4 = 
ramp-capacity-3 = 
ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>  <bar-volume>
label-volume = %percentage%%
format-volume-margin = 0
format-volume-prefix = "  "
format-volume-prefix-foreground = ${color.text}
label-volume-foreground = ${color.text}

label-muted =  Muted
label-muted-foreground = #666

bar-volume-width = 30
bar-volume-indicator =  
bar-volume-indicator-font = 0
bar-volume-fill = %{F#255426}%{F-} 
;    
bar-volume-fill-font = 3

bar-volume-empty = 
bar-volume-empty-font = 3
bar-volume-empty-foreground = ${color.text}


[module/playerctl]
type = custom/script
exec = $HOME/.config/polybar/spotify.sh
interval = 2
click-left = playerctl play-pause &
format = <label>
label = %output%
format-padding = ${vars.spacing}


