[color]
highlight  = #aa102010
strong-highlight = #255426
background = #bb010101
text	   = #adc0b0
accent 	   = #548550
orange     = #567ca4
gray       = #8dabc8

[vars]
spacing = 0


[bar/main]
;enable-ipc = true
width = 100%
height = 50
radius = 10
fixed-center = true
override-redirect = false

background = ${color.background}
foreground = ${color.text}

border-left-size = 10
border-right-size = 10
border-top-size = -10

padding-left = 5
padding-right = 5

module-margin-left = 1
module-margin-right = 1 

font-0 = "FontAwesome:size=12;5"
font-1 = Hack-Regular:size=10.5;5
;font-0 applies to the all icons
;font-1 applies to all bar text
modules-left = time
modules-center = i3
modules-right = playerctl playerctl-prev playerctl-play playerctl-next
tray-position = right
tray-underline = ${color.c4}
line-size = 1.5


[bar/bottom]
bottom = true
background = ${color.background}
foreground = ${color.text}
width = 100%
height = 45px
;font-0 applies to icons including media buttons
font-0 = "FontAwesome:size=12;-3"
;font-1 applies to workspaces labelling and Spotify text
font-1 = "Hack-Regular:size=10.5;-3"
;font-2 applies to the Volume slider
font-2 = "FontAwesome:size=2;-5"

modules-left = cpu separator mem separator temp separator disk separator ipv4 separator local-ip
modules-right = pulseaudio redshift power

line-size = 2
border-left-size = 10
